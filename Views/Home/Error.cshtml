@model ErrorViewModel
@{
    var statusCode = Context.Request.Query["statusCode"].ToString();
    var errorMessage = statusCode switch
    {
        "404" => "The page you're looking for doesn't exist.",
        "500" => "An error occurred while processing your request.",
        _ => "An unexpected error occurred."
    };
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-1 text-danger">@(string.IsNullOrEmpty(statusCode) ? "Error" : statusCode)</h1>
            <h2 class="mt-4">@errorMessage</h2>
            <p class="lead mt-4">
                @if (Model?.ShowRequestId ?? false)
                {
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                }
            </p>
            <div class="mt-5">
                <a href="/" class="btn btn-primary btn-lg">Return to Home</a>
            </div>
        </div>
    </div>
</div> 