@model IEnumerable<SmartInventoryManagement.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Order List</h1>

<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <p class="mb-0">View all orders in the system.</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Create" class="btn btn-primary">Create New Order</a>
                <a asp-action="Track" class="btn btn-outline-secondary">Track Order</a>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Guest Name</th>
                <th>Email</th>
                <th>Total</th>
                <th>Items</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderNumber</td>
                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                    <td>@order.GuestName</td>
                    <td>@order.GuestEmail</td>
                    <td>@string.Format("{0:C}", order.TotalAmount)</td>
                    <td>@order.OrderItems.Count</td>
                    <td>
                        <a asp-action="OrderSummary" asp-route-id="@order.Id" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
