@model SmartInventoryManagement.ViewModels.DeleteAccountViewModel

@{
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Account</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone. This will permanently delete your account.
                    </div>
                    
                    <p>
                        Deleting your account will:
                    </p>
                    <ul>
                        <li>Permanently remove your profile and personal information</li>
                        <li>Prevent you from accessing the system with this email in the future</li>
                        <li>Remove your account history and preferences</li>
                    </ul>
                    
                    <form method="post" asp-action="ConfirmDeleteAccount">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Enter your password to confirm</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" asp-for="ConfirmDelete" class="form-check-input" id="confirmDelete" />
                            <label asp-for="ConfirmDelete" class="form-check-label">
                                I understand that this action cannot be undone
                            </label>
                            <span asp-validation-for="ConfirmDelete" class="text-danger d-block"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Manage" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger" id="deleteButton">
                                Delete My Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-action="Manage" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 