@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-paper display-1 text-success"></i>
                    </div>
                    
                    <h3>Check your email</h3>
                    <p class="lead">We've sent a password reset link to your email address.</p>
                    
                    <div class="alert alert-info mt-3">
                        <p><i class="bi bi-info-circle"></i> If you don't see the email in your inbox, please check your spam folder.</p>
                        <p>The password reset link will expire in 24 hours.</p>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Return to Login
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 