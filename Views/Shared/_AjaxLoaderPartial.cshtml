@{
    var message = ViewData["LoadingMessage"]?.ToString() ?? "Loading...";
}

<div class="ajax-loading-container d-none">
    <div class="spinner-container">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading</span>
        </div>
        <p class="mt-2 loading-message">@message</p>
    </div>
</div>

<style>
    .ajax-loading-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(255, 255, 255, 0.8);
        z-index: 9999;
    }

    .spinner-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
    }

    .loading-message {
        font-weight: 500;
        color: #333;
    }
</style> 